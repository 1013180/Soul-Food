<% @posts.each do |post| %>
<div>
  <%= link_to post_path(post.id) do %>
  <%= attachment_image_tag post, :post_image%>
  <% end %>
  <!--<p>投稿ユーザー画像：<= image_tag('sample-author1.jpg') %></p>-->
  <p>タイトル：<%= post.post_title %></p>
  <p>説明：<%= post.post_introduction %></p>
  <p>ユーザーネーム：<%= post.user.name %></p>
</div>
<% end %>