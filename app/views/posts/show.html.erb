<div class="post-body">
  <%= attachment_image_tag @post, :post_image %>
  <p>ショップ名：<%= @post.post_title %></p>
  <p>説明：<%= @post.post_introduction %></p>
  <p>ユーザーネーム：<%= @post.user.name %></p>
  <p>投稿日時：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
  <div id="favorites_buttons_<%= @post.id %>">
    <%= render 'favorites/favorite', post: @post, favorite: @favorite %>
  </div>
  <% if @post.user == current_user %>
    <%= link_to "削除", post_path(@post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_post_#{@post.id}" %>
  <% end %>
</div>