 <div class="comments">
   <p>コメント件数：<%= post.comments.count %></p>
   <% post.comments.each do |comment| %>
   <table>
     <tr>
       <td>【<%= comment.user.name %>】</td></br>
       <td><%= comment.comment %></td>
       <% if comment.user == current_user %>
       <div class="comment-delete">
         <td><%= link_to "Destroy", post_post_comment_path(comment.post, comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %></td>
       </div>
       <% end %>
     </tr>
   </table>
   <% end %>
  <div class="new-comment">
    <!--<= form_with(model:[post, comment], url: post_post_comments_path(post.id)) do |f| %>-->
    <%= form_with(model_name:[post, comment] ) do |f| %>
    <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
    <%= f.submit "送信する", class: 'btn btn-secondary' %>
    <% end %>
  </div>
</div>

